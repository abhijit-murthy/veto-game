<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.viral.vetogame" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-library android:name="com.google.android.maps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/veto_stamp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGame"
            android:label="New Game"
            android:parentActivityName=".GameList" >
        </activity>
        <activity
            android:name=".InvitePeople"
            android:label="Invite"
            android:parentActivityName=".NewGame" >
        </activity>
        <activity
            android:name=".InitSuggestion"
            android:label="Suggestion"
            android:parentActivityName=".NewGame" >
        </activity>
        <activity
            android:name=".PastGameList"
            android:label="@string/title_activity_past_game_list"
            android:parentActivityName=".GameList" >
        </activity>

        <activity
            android:name=".CurrGame"
            android:label="@string/title_activity_curr_game"
            android:parentActivityName=".GameList" >
        </activity>
        <activity
            android:name=".PastSuggestion"
            android:label="@string/title_activity_past_suggestion_list"
            android:parentActivityName=".CurrGame" >
        </activity>

       <activity
            android:name=".NewSuggestion"
            android:label="@string/title_activity_new_suggestion"
            android:parentActivityName=".NewGame"
            android:windowSoftInputMode="stateHidden">
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
        </activity>
    </application>

</manifest>
