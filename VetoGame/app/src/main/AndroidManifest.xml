<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.viral.vetogame" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- The following two permissions are not required to use
         Google Maps Android API v2, but are recommended. -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-library android:name="com.google.android.maps" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/muffin_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <!--<meta-data android:name="com.facebook.sdk.ApplicationId"
                android:value="621979677903326"/>-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GameList"
            android:label="@string/title_activity_game_list"
            android:parentActivityName=".Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <meta-data
                android:name="android.app.searchable_game"
                android:resource="@xml/searchable_game">
            </meta-data>
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.Login" />
        </activity>

        <activity
            android:name=".NewGame"
            android:label="@string/title_activity_new_game"
            android:parentActivityName=".GameList"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.GameList" />
        </activity>

        <activity
            android:name=".InvitePeople"
            android:label="@string/title_activity_invite_people"
            android:parentActivityName=".NewGame"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.app.searchable_people"
                android:resource="@xml/searchable_people">
            </meta-data>
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.NewGame" />
        </activity>

        <activity
            android:name=".InitSuggestion"
            android:label="Suggestion"
            android:parentActivityName=".NewGame"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.NewGame" />
        </activity>

        <activity
            android:name=".PastGameList"
            android:label="@string/title_activity_past_game_list"
            android:parentActivityName=".GameList"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.app.searchable_past_game"
                android:resource="@xml/searchable_game">
            </meta-data>
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.GameList" />
        </activity>

        <activity
            android:name=".CurrGame"
            android:label="@string/title_activity_curr_game"
            android:parentActivityName=".GameList"
            android:screenOrientation="portrait">
            <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.GameList" />
        </activity>

        <activity
            android:name=".PastSuggestion"
            android:label="@string/title_activity_past_suggestion_list"
            android:parentActivityName=".CurrGame"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.viral.vetogame.CurrGame" />
        </activity>

       <activity
            android:name=".NewSuggestion"
            android:label="@string/title_activity_new_suggestion"
            android:parentActivityName=".NewGame"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
           <meta-data
               android:name="android.app.searchable_suggestion"
               android:resource="@xml/searchable_suggestion">
           </meta-data>
           <meta-data
               android:name="com.google.android.gms.version"
               android:value="@integer/google_play_services_version" />
           <!-- Parent activity meta-data to support 4.0 and lower -->
           <meta-data
               android:name="android.support.PARENT_ACTIVITY"
               android:value="com.example.viral.vetogame.NewGame" />
        </activity>

        <!-- key to use maps api -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDz0EDduSuqxGYW_L57sCy7QPsG4GMfqAU"/>
    </application>

</manifest>
