<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.viral.vetogame.CurrGame"
    android:weightSum="100"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_curr_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Suggestion"
        android:textColor="#0000B7"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="10dp"
        android:background="@drawable/btn_background" />

    <!--<TextView
        android:text="Suggested by name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center_horizontal"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <View android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/curr_suggestion_image"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_alignRight="@id/strut"
            android:layout_alignParentLeft="true"
            android:paddingRight="5dp"
            android:src="@drawable/bakery"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_alignLeft="@id/strut"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:src="@drawable/map"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="Buckhead, GA 30324"
                android:id="@+id/curr_suggestion_address"/>
            </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time before suggestion wins"
                android:gravity="center"/>

            <TextView
                android:id="@+id/remaining_time_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:12:30"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/heart"/>

            <TextView
                android:id="@+id/num_supporters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_veto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Veto it"/>

        <Button
            android:id="@+id/btn_upvote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Support it"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/all_players"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btn_past_suggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/past_suggestions"
            style="?android:attr/borderlessButtonStyle" />

        </RelativeLayout>


</LinearLayout>
